<% content_for :appname do %>
	Pr0filer
<% end %>

<% content_for :title do %>
	Sign in Page
<% end %>

<% content_for :form_left do %>
<h2>Sign In</h2>
<form action="/sessions" method="post" role="form">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label for="email">Email Address</label>
		<input type="email" name="session[email]" class="form-control" id="email">
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" name="session[password]" class="form-control" id="password">
	</div>
	<button type="submit" class="btn btn-success pull-right">Sign In</button>
</form>
<a href="/register">Don't have an account? Register.</a>
<div class="notice">
	<h4>If you would like to see the application in action, feel free to register an account...  or you can log in with the following pre-set accounts:</h4>
	<table>
		<thead>
			<tr>
				<th>User type</th>
				<th>Email</th>
				<th>Password</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Regular user</td>
				<td>guest@test.com</td>
				<td>12345678</td>
			</tr>
			<tr>
				<td>User with administrator access</td>
				<td>admin@test.com</td>
				<td>12345678</td>
			</tr>
		</tbody>
	</table>
</div>

<% end %>