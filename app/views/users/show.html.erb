<% content_for :appname do %>
	Pr0filer
<% end %>

<% content_for :form_left do %>
<table class="table">
	<tbody>
		<tr>
			<td><h4><%= @user.first_name + " " + @user.last_name %></h4></td>
		</tr>
		<tr>
			<td>Registered at:</td>
			<td><%= @user.created_at.strftime("%b %d, %Y") %></td>
		</tr>
		<tr>
			<td>User ID:</td>
			<td>#<%= @user.id %></td>
		</tr>
		<tr>
			<td>Email address:</td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td>Description:</td>
			<td><%= @user.description %></td>
		</tr>
	</tbody>
</table>
<% end %>

<% content_for :main do %>
<form action="" role="form">
	<input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">
	<div class="form-group">
		<label for="new_message" class="control-label"><h4>Leave a message for <%= @user.first_name %></h4></label>
		<textarea name="message_text" class="form-control" id="new_message" rows="4"></textarea>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success pull-right">Post</button>
	</div>
</form>
<% end %>